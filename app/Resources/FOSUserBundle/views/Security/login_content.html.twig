{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <div>
        <img src="{{ asset('http://image.noelshack.com/fichiers/2017/21/1495538923-tennis-racket-2259356-1920.jpg') }}" alt="" class="header_picture">
        <div class="header_title">Log In</div>
    </div>

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <p><label for="username">{{ 'security.login.username'|trans }}</label></p>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    <br>

    <p><label for="password">{{ 'security.login.password'|trans }}</label></p>
    <input type="password" id="password" name="_password" required="required" />
    <br>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <p><label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></p>
    <br><br>
    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn"/>
</form>
    {% endblock body %}